type Article {
  id: ID!
  title: String!
  text: String!
  published: Boolean!
  createdById: ID!
  approvedById: ID!
  createdAt: String!
  createdBy: User!
  approvedBy: User!
  comments: [Comment!]
}

input ArticleInput {
  title: String!
  text: String!
  createdById: ID!
}

extend type Query {
  article(articleId: String!): Article!
  articles: [Article!]
}

extend type Mutation {
  createArticle(input: ArticleInput!): Article!
}
